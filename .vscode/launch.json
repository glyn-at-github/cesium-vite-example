{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Vite dev server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal"
    },
    {
      "name": "Chrome: attach to http://localhost:5173",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Dev + Browser",
      "configurations": ["Vite dev server", "Chrome: attach to http://localhost:5173"]
    }
  ]
}